<style>
    a:hover {
  background-color: greenyellow;
}
    #buyBtn{
       text-align: center;
       margin-bottom: 50px;
    }
</style>

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>장바구니</h2>
                </div>
            </div>
        </div>

        <div class="row featured__filter">
            <!-- 카트에 물품이 존재하는 경우 -->
            <% if(cartProduct.length != 0){
                 for(i=0; i < cartProduct.length; i++){%>
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <form id="cartForm" method="POST" action="">
                        <input type="hidden" id="cartChk" name="cartChk"/>
                        <tr onclick='event.cancelBubble=true;'> </tr>
                            <input type="checkbox" id="chk" name="chk" value="<%=cartProduct[i].CARTPRODUCT_ID %>"> </input>
                        <div class="featured__item">
                            <div class="featured__item__pic ">
                                <img src="../../<%=cartProduct[i].PRODUCT_IMG%>" width="100%">
                                <!-- <ul class="featured__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul> -->
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="productDetail?productId=<%=cartProduct[i].PRODUCT_ID%>"><%=cartProduct[i].PRODUCT_NAME%></a></h6>
                                <h5>선택된 수량 : <%=cartProduct[i].CARTPRODUCT_COUNT%></h5>
                                <h5>총 합계 : <%=cartProduct[i].SUM_PRICE%></h5>
                            </div>
                        </div>
                    </form>
                </div>
            <%}%>
            <%} else {%>
                <h2>장바구니에 상품이 존재하지 않습니다.</h2>
                <%}%>
            </div>
    </div>
    <div id="buyBtn">
        <button class="site-btn" id="buy_cart">카트 상품 구매</button>
    </div>
</section>
<script>
   window.onload = function(){
     $("#buy_cart").click(function () {
          if (confirm("등록하시겠습니까?") == true) {
                // 체크된 상품 번호 가져오기
                var chkArr = [];
                $("input[name=chk]:checked").each(function () {
                    chkArr.push($(this).val());
                });
                console.log(chkArr)
                $('#cartChk').val(chkArr);
                console.log($('#cartChk'));
                  $("#cartForm").attr("action", "payment");
                  $("#cartForm").submit();
          } else {
            return;
          };
        });
    }
</script>